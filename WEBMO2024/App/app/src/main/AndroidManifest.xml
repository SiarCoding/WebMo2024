<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Erlaubnis für Internetzugriff hinzufügen -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- LoginActivity als Launcher setzen -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- EssenActivity hinzufügen -->
        <activity
            android:name=".EssenActivity"
            android:label="@string/essen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- EditPlanActivity hinzufügen -->
        <activity
            android:name=".EditPlanActivity"
            android:label="@string/edit_plan"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            tools:targetApi="33"
            android:enableOnBackInvokedCallback="true"/> <!-- Bedingte Anwendung des Attributs für API-Level 33+ -->

        <!-- EssensplanActivity hinzufügen -->
        <activity
            android:name=".EssensplanActivity"
            android:label="@string/essensplan"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- PlaeneActivity hinzufügen -->
        <activity
            android:name=".PlaeneActivity"
            android:label="@string/plaene"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:enableOnBackInvokedCallback="true"
            tools:targetApi="33" />


        <!-- AddFoodActivity hinzufügen -->
        <activity
            android:name=".AddFoodActivity"
            android:label="@string/add_food"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- Weitere Activities oder Services, falls benötigt -->
    </application>
</manifest>
