<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Box für die Woche und den Plan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Woche Titel -->
            <TextView
                android:id="@+id/tvSelectedPlanWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Woche 1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="8dp" />

            <!-- Tabelle für den Essensplan -->
            <TableLayout
                android:id="@+id/tablePlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:layout_marginBottom="8dp">

                <!-- Überschriften der Tabelle -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tag"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preis"
                        android:textStyle="bold" />
                </TableRow>

                <!-- Dynamische Zeilen werden hier eingefügt -->
            </TableLayout>

            <!-- Gesamtpreis anzeigen -->
            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gesamtpreis: 0.00 €"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <!-- Bearbeiten und Löschen Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BEARBEITEN"
                android:backgroundTint="@android:color/holo_blue_light" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LÖSCHEN"
                android:layout_marginStart="16dp"
                android:backgroundTint="@android:color/holo_red_light" />
        </LinearLayout>

        <!-- Spinner für Auswahl der Wochentage -->
        <Spinner
            android:id="@+id/spinnerMontag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerDienstag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerMittwoch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerDonnerstag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinnerFreitag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Button zum Speichern -->
        <Button
            android:id="@+id/btnSavePlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAN SPEICHERN"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
