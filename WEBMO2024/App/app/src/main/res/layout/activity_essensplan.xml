<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Spinner für die Wochenauswahl -->
        <Spinner
            android:id="@+id/weekSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Button zum Speichern -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan speichern"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Button zum Anzeigen der Pläne -->
        <Button
            android:id="@+id/viewPlansButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pläne anzeigen"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Button zum Löschen des Plans -->
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan löschen"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Nachricht bei Erfolg -->
        <TextView
            android:id="@+id/successMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan erfolgreich geladen!"
            android:textColor="@android:color/holo_green_dark"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- Nachricht bei Fehler -->
        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fehler beim Laden des Plans"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
