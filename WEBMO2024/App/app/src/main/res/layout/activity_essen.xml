<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- AppBarLayout mit Toolbar und Tabs -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:title="Essensverwaltung"
            android:titleTextColor="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <!-- TabLayout f체r die Navigation -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@android:color/white"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="@android:color/darker_gray">

            <!-- Definiere die Tabs hier -->
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabEssenList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Essensliste" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabAddEssen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neues Essen hinzuf체gen" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabEssensplanErstellen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Essensplan erstellen" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabEssensplaene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Essenspl채ne" />

        </com.google.android.material.tabs.TabLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- ViewPager2 f체r die Fragments -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
